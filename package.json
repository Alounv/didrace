{
  "name": "didrace",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:ui": "vite",
    "dev:convex": "npx convex dev",
    "dev": "concurrently \"bun run dev:convex\" \"bun run dev:ui\"",
    "build": "tsc -b && vite build",
    "build:convex": "npx convex deploy",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "rm -rf dist .convex node_modules/.vite",
    "test": "playwright test --reporter=list",
    "test:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "dependencies": {
    "@fontsource/lato": "^5.2.6",
    "@fontsource/poppins": "^5.2.6",
    "@solidjs/router": "^0.15.3",
    "@tailwindcss/vite": "^4.1.12",
    "convex": "^1.26.2",
    "jose": "^6.1.0",
    "js-cookie": "^3.0.5",
    "solid-heroicons": "^3.2.4",
    "solid-js": "^1.9.9",
    "tailwindcss": "^4.1.12",
    "theme-change": "^2.5.0",
    "vite-template-solid": "https://github.com/jamwt/solid-convex.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@playwright/test": "^1.55.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.1",
    "daisyui": "^5.0.54",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-solid": "^2.11.8"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "engines": {
    "node": "22.19.0"
  }
}
