{
  "name": "didrace",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:ui": "vite",
    "dev:convex": "npx convex dev",
    "dev": "concurrently \"npm run dev:convex\" \"npm run dev:ui\"",
    "build": "tsc -b && vite build",
    "build:convex": "npx convex deploy",
    "lint": "eslint .",
    "clean": "rm -rf dist .convex node_modules/.vite",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "prepare": "husky"
  },
  "dependencies": {
    "@fontsource/lato": "^5.2.6",
    "@fontsource/poppins": "^5.2.6",
    "@solidjs/router": "^0.15.3",
    "@tailwindcss/vite": "^4.1.12",
    "convex": "^1.26.2",
    "eslint-plugin-solid": "^0.14.5",
    "jose": "^6.1.0",
    "js-cookie": "^3.0.5",
    "solid-heroicons": "^3.2.4",
    "solid-js": "^1.9.9",
    "tailwindcss": "^4.1.12",
    "theme-change": "^2.5.0",
    "vite-template-solid": "https://github.com/jamwt/solid-convex.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.1",
    "daisyui": "^5.0.54",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vite-plugin-solid": "^2.11.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": "20.11.1"
  }
}
