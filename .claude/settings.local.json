{
  "mcpServers": {
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp"
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    }
  },
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(grep:*)",
      "Bash(npx tsc:*)",
      "Bash(rm:*)",
      "Bash(npx convex deploy:*)",
      "Bash(npx convex login)"
    ],
    "deny": []
  }
}
